<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout
                    pattern="%style{%d{ISO8601}} %highlight{%-5level }[%style{%t}{bright,blue}] %style{%C{10}}{bright,yellow}: %msg%n%throwable"/>
        </Console>
        <SplunkHttp
                name="splunkhttp"
                url="http://code4fun.xyz:8088"
                token="fa315885-205b-43ec-9b9d-0c8493eb74ae"
                host="code4fun.xyz"
                index="spring_prod"
                type="raw"
                source="source name"
                sourcetype="log4j"
                messageFormat="json"
                disableCertificateValidation="true">
            <PatternLayout pattern="{&quot;time&quot;:&quot;%d{ISO8601}&quot;, &quot;level&quot;:&quot;%p&quot;, &quot;thread&quot;:&quot;%t&quot;, &quot;logger&quot;:&quot;%c&quot;, &quot;message&quot;:&quot;%msg&quot;, &quot;exception&quot;:&quot;%ex&quot;}" />

        </SplunkHttp>
    </Appenders>

    <Loggers>
        <Root level="error">
            <AppenderRef ref="console" />
            <AppenderRef ref="splunkhttp" />
        </Root>
    </Loggers>
</Configuration>